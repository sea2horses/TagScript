# Declare the variable
<variable type="number" name="x"/>

# User inputs a number
<input prompt="Type a number:" catch="x"/>

# Evaluate the negative and catch it again
<eval catch="x">
    <add>
        <get name="x"/>
        [1]
    </add>
</eval>

# output the result
<output no-autobreak>
    "Your number +1 is: "
    <get name="x"/>
</output>